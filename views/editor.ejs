<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="editor.css">
    <title>Blogs</title>
</head>
<body>
    <form action="/post" method="post" enctype="multipart/form-data">
        <input id="banner" type="file" accept="image/*" name="photo" hidden>
        <div id="pic">
            
            <label for="banner" ><img src="photo.png" alt="uplode_image" id="up"></label>
        </div>
        <div class="blog">
                <textarea class="title" placeholder="Blog Title.." name="head"></textarea>
                <textarea class="title" id="b" placeholder="Write your blog" name="bod" ></textarea>
                <input type="submit" class="btn">
        </div>
    </form>
    
    <script>
        var pic=document.getElementById("pic");
        var button=document.querySelector("#banner");
        button.onchange=()=>{
            pic.style.backgroundImage=`url('${URL.createObjectURL(button.files[0])}')`;
        };
        

        var t=document.querySelector("textarea");
        t.addEventListener("keydown",(e)=>{
            t.style.height="15vh";
            t.style.height=e.target.scrollHeight+"px";
        });
    </script>
</body>
</html>